<h3 class="ui header">{{t "forms.i-i-s-super-maga-sales-invioce-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-super-maga-sales-invioce-e.salesDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.salesDate
      class=(if (v-get validationModel "salesDate" "isInvalid") "error")
      data-test-i-i-s-super-maga-sales-invioce-e-salesDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "salesDate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-super-maga-sales-invioce-e.client-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.client
      displayAttributeName="name"
      autocomplete=true
      relationName="client"
      projection="ClientL"
      title=(t "forms.i-i-s-super-maga-sales-invioce-e.client-caption")
      readonly=readonly
      componentName="clientLookup"
      class=(if (v-get validationModel "client" "isInvalid") "error")
      data-test-i-i-s-super-maga-sales-invioce-e-client=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "client" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-super-maga-sales-invioce-e.productItem-caption"}}</label>
    {{flexberry-groupedit
      componentName="productItemGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.productItem
      content=model.productItem
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "productItem" "isInvalid") "error")
      data-test-i-i-s-super-maga-sales-invioce-e-productItem=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "productItem" "message")}}
  </div>
</form>
